<div class="container">
  <div class="error_explanation">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, id:"inputTitle", placeholder:"名前", type:"text", class:"form-control"  %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area :body, id:"inputOpinion", placeholder:"感想", type:"text", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <a href="/books">Back</a>
    </div>
  </div>
</div>